@model Notes_Market_Place.Models.SystemConfiguration

@{
    ViewBag.Title = "ManageSyatemConfiguration";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<section class="Add-notes">
    <div class="content-box-md">
        <div class="container">
            <div class="row first-component">
                <div class="col-md-12">
                    <div class="heading-01">
                        <h2>Manage System Configuration</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div>
                        <form>
                            <div class="form-group input-flid">
                                <label for="text-1" class="titles">Support emails address *</label>
                                <input type="text" class="form-control default-text" id="text-1" value="john">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group input-flid">
                        <label for="description" class="titles">Support phone number *</label>
                        <input type="text" class="form-control" id="text-1" placeholder="Enter Phone number">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group input-flid">
                        <label for="description" class="titles">Email Address(es)*</label>
                        <input type="text" class="form-control" id="text-1" placeholder="Enter email address">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group input-flid">
                        <label for="description" class="titles">Facebook URL</label>
                        <input type="text" class="form-control" id="text-1" placeholder="Enter facebook url">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group input-flid">
                        <label for="description" class="titles">Twitter URL</label>
                        <input type="text" class="form-control" id="text-1" placeholder="Enter twitter url">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group input-flid">
                        <label for="description" class="titles">Linkedin URL</label>
                        <input type="text" class="form-control" id="text-1" placeholder="Enter linkedin url">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group input-flid">
                        <label for="description" class="titles">
                            Default image for notes(if seller do not
                            upload)
                        </label>
                        <input type="text" class="form-control text-center note-preview" placeholder="">
                        <img src="images/upload-file.png" alt="upload-file" class="upload-notes">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group input-flid">
                        <label for="description" class="titles">
                            Default profile picture(if seller do not
                            upload)
                        </label>
                        <input type="text" class="form-control text-center note-preview" placeholder="">
                        <img src="images/upload-file.png" alt="upload-file" class="upload-notes">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div id="home-add-notes">
                        <a class="btn btn-general btn-home-03" href="#" target="save" role="button">submit</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>























