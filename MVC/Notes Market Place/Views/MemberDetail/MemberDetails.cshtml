                                        <h4>DOB:</h4>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-6">
                                    <div class="member-detail-right">
                                        <h4>@ViewBag.dateofbirth</h4>
                                    </div>
                                </div>
                            </div>
                        }

                        @if (ViewBag.phonenumber != null)
                        {
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-6">
                                    <div class="member-detail-left">
                                        <h4>Phone Number:</h4>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-6">
                                    <div class="member-detail-right">
