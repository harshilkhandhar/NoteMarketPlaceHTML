                                <div class="col-md-6 col-sm-6 col-6">
                                    <div class="member-detail-left">
                                        <h4>Collage/University:</h4>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-6">
                                    <div class="member-detail-right">
                                        <h4>@ViewBag.collage</h4>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>

            <!--right part-->
            <div class="col-md-6 member-right">
                <div class="row vl">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-6">
                                <div class="member-detail-left">
                                    <h4>Address 1:</h4>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6 col-6">
                                <div class="member-detail-right">
                                    <h4>@ViewBag.Address1</h4>
                                </div>
                            </div>
                        </div>
                        @if (ViewBag.Address2 != null)
                        {
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-6">
                                    <div class="member-detail-left">
                                        <h4>Address 2:</h4>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-6">
                                    <div class="member-detail-right">
                                        <h4>@ViewBag.Address2</h4>
                                    </div>
                                </div>
                            </div>
                        }

                        @if (@ViewBag.city != null)
                        {
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-6">
                                    <div class="member-detail-left">
                                        <h4>City:</h4>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-6">
                                    <div class="member-detail-right">
                                        <h4>@ViewBag.city</h4>
