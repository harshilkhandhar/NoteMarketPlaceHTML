@model Notes_Market_Place.Models.SellerNote

@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<section class="dashboard">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-6">
                <div class="heading-01">
                    <h2>Dashboard</h2>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-6 text-right">
                <div id="home-add-notes">
                    <a class="btn btn-general btn-home-03" href="@Url.Action("AddNotes","Notes")">add note</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col" class="tb-col">
                                <div class="tb-div">
                                    <img src="~/Content/images/my-earning.png" alt="earning">
                                    <h3 class="dashboard-heading">
                                        My Earning
                                    </h3>
                                </div>
                            </th>
                            <th scope="col" class="tb-col text-center">
                                <div class="tb-div">
                                    @if (@ViewBag.MySoldNote != null)
                                    {
                                        <a href="~/Notes/MySoldNote">
                                            <h3 class="dashboard-heading">@ViewBag.MySoldNote</h3>
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="~/Notes/MySoldNote">
                                            <h3 class="dashboard-heading">0</h3>
                                        </a>
                                    }

                                    <p>Number of Notes Sold</p>
                                </div>
                            </th>
                            <th scope="col" class="tb-col text-center">
                                <div class="tb-div">
                                    @if (@ViewBag.MyEarning != null)
                                    {
                                        <h3 class="dashboard-heading">$@ViewBag.MyEarning</h3>
                                        <p>Money Earned</p>
                                    }
                                    else
                                    {
                                        <h3 class="dashboard-heading">$0</h3>
                                        <p>Money Earned</p>
                                    }
                                </div>
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-4 col-sm-4">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col" class="tb-col-right text-center">
                                        <div class="tb-div">
                                            @if (@ViewBag.MyDownload != null)
                                            {
                                                <a href="~/Notes/MyDownload">
                                                    <h3 class="dashboard-heading">@ViewBag.MyDownload</h3>
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="~/Notes/MyDownload">
                                                    <h3 class="dashboard-heading">0</h3>
                                                </a>
                                            }

                                            <p>Download</p>
                                        </div>
                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div class="col-md-4 col-sm-4">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col" class="tb-col-right text-center">
                                        <div class="tb-div">
                                            @if (ViewBag.Rejected != null)
                                            {
                                                <a href="~/Notes/MyRejectedNote">
                                                    <h3 class="dashboard-heading">@ViewBag.Rejected</h3>
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="~/Notes/MyRejectedNote">
                                                    <h3 class="dashboard-heading">0</h3>
                                                </a>
                                            }
                                            <p>My Rejected Notes</p>
                                        </div>
                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div class="col-md-4 col-sm-4">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col" class="tb-col-right text-center">
                                        <div class="tb-div">
                                            @if (@ViewBag.Buyer != null)
                                            {
                                                <a href="~/Home/BuyerRequest">
                                                    <h3 class="dashboard-heading">@ViewBag.Buyer</h3>
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="~/Home/BuyerRequest">
                                                    <h3 class="dashboard-heading">0</h3>
                                                </a>
                                            }

                                            <p>Buyer Request</p>
                                        </div>
                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        @using (Html.BeginForm("DashBoard", "Notes", FormMethod.Get))
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="home-03-info">
                        <h3>In Process Notes</h3>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-8 col-sm-8 col-8">
                            <div class="form-group dash-search front-serach-box" id="dashboard-btn">
                                <span class="fa fa-search form-control-feedback"></span>
                                @Html.TextBox("Search", null, new { @class = "form-control", @placeholder = "Search", @style = "margin-top:20px;" })

                            </div>
                        </div>
                        <div class="col-md-4 col-sm-4 col-4">
                            <div id="dashboard-btn">
                                <input class="btn btn-admin btn-home-03" type="submit" value="search" name="Search" style="margin-top:20px;">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="row table-responsive">
            <table class="table text-center">
                <thead>
                    <tr>
                        <th>
                            @Html.ActionLink("ADDED DATE", "DashBoard", new { Sortorder = ViewBag.Sortorder == null ? "DESC" : (ViewBag.Sortorder == "ASC" ? "DESC" : "ASC"), SortBy = "ADDED DATE", PageNumber = ViewBag.PageNumber == 0 ? 1 : ViewBag.PageNumber }, new { @style = "color:#000000;" })
                        </th>
                        <th>
                            @Html.ActionLink("TITLE", "DashBoard", new { Sortorder = ViewBag.Sortorder == null ? "DESC" : (ViewBag.Sortorder == "ASC" ? "DESC" : "ASC"), SortBy = "TITLE", PageNumber = ViewBag.PageNumber == 0 ? 1 : ViewBag.PageNumber }, new { @style = "color:#000000;" })
                        </th>
                        <th>
                            @Html.ActionLink("CATEGORY", "DashBoard", new { Sortorder = ViewBag.Sortorder == null ? "DESC" : (ViewBag.Sortorder == "ASC" ? "DESC" : "ASC"), SortBy = "CATEGORY", PageNumber = ViewBag.PageNumber == 0 ? 1 : ViewBag.PageNumber }, new { @style = "color:#000000;" })
                        </th>
                        <th>
                            @Html.ActionLink("STATUS", "DashBoard", new { Sortorder = ViewBag.Sortorder == null ? "DESC" : (ViewBag.Sortorder == "ASC" ? "DESC" : "ASC"), SortBy = "STATUS", PageNumber = ViewBag.PageNumber == 0 ? 1 : ViewBag.PageNumber }, new { @style = "color:#000000;" })
                        </th>
                        <th>ACTION</th>
                    </tr>
                </thead>
                @if (Model.InProgressNotes.Count() == 0)
                {
                    <tr class="text-center"><td colspan="5">No Record Found</td></tr>
                }
                <tbody class="table-data">

                    @foreach (var item in Model.InProgressNotes)
                    {
                        <tr>
                            <td>

                                @item.AddedDate.Value.ToString("dd-MM-yyyy")
                            </td>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                @item.Category
                            </td>
                            <td>
                                @item.Status
                            </td>
                            @if (item.Status == "Draft")
                            {
                                <td>
                                    <a href="@Url.Action("EditNote", "Notes", new { id = item.NoteId, title = item.Title })"><img src="~/Content/images/edit.png" alt="edit-image"></a>
                                    <a href="@Url.Action("DeleteNote", "Notes", new { id = item.NoteId, title = item.Title })">
                                        <img src="~/Content/images/delete.png"
                                             alt="delete-image">
                                    </a>
                                </td>
                            }
                            else
                            {
                                <td><a href="@Url.Action("NotesDeatil", "Home", new {id = item.NoteId })"><img src="~/Content/images/eye.png" alt="eye-image"></a></td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <section class="dashboard-pagination">
            <div class="pagelist">
                <nav>
                    <ul class="pagination justify-content-center">
                        @{
                            if (ViewBag.totalpages != null)
                            {
                                double TotalPages = ViewBag.totalpages;
                                if (ViewBag.PageNumber == 1)
                                {
                                    <li class="page-item">
                                        @Html.ActionLink("<", "DashBoard", new { Sortorder = ViewBag.Sortorder == null ? "DESC" : ViewBag.Sortorder, SortBy = ViewBag.SortBy == null ? "TITLE" : ViewBag.SortBy, PageNumber = ViewBag.PageNumber }, new { @class = "page-link" })
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">
                                        @Html.ActionLink("<", "DashBoard", new { Sortorder = ViewBag.Sortorder == null ? "DESC" : ViewBag.Sortorder, SortBy = ViewBag.SortBy == null ? "TITLE" : ViewBag.SortBy, PageNumber = ViewBag.PageNumber - 1 }, new { @class = "page-link" })
                                    </li>
                                }
                                for (int i = 1; i <= TotalPages; i++)
                                {
                                    if (i == ViewBag.PageNumber)
                                    {
                                        <li class="page-item active ">
                                            @Html.ActionLink(i.ToString(), "DashBoard", new { Sortorder = ViewBag.Sortorder == null ? "DESC" : ViewBag.Sortorder, SortBy = ViewBag.SortBy == null ? "TITLE" : ViewBag.SortBy, PageNumber = i }, new { @class = "page-link" })
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="page-item ">
                                            @Html.ActionLink(i.ToString(), "DashBoard", new { Sortorder = ViewBag.Sortorder == null ? "DESC" : ViewBag.Sortorder, SortBy = ViewBag.SortBy == null ? "TITLE" : ViewBag.SortBy, PageNumber = i }, new { @class = "page-link" })
                                        </li>
                                    }
                                }
                                if (ViewBag.PageNumber == TotalPages)
                                {
                                    <li class="page-item">
                                        @Html.ActionLink(">", "DashBoard", new { Sortorder = ViewBag.Sortorder == null ? "DESC" : ViewBag.Sortorder, SortBy = ViewBag.SortBy == null ? "TITLE" : ViewBag.SortBy, PageNumber = ViewBag.PageNumber }, new { @class = "page-link" })
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">
                                        @Html.ActionLink(">", "DashBoard", new { Sortorder = ViewBag.Sortorder == null ? "DESC" : ViewBag.Sortorder, SortBy = ViewBag.SortBy == null ? "TITLE" : ViewBag.SortBy, PageNumber = ViewBag.PageNumber + 1 }, new { @class = "page-link" })
                                    </li>
                                }
                            }
                        }
                    </ul>
                </nav>
            </div>
        </section>
    </div>
</section>



<!--Published Note Section-->

<section class="dashboard">
    <div class="container">
        @using (Html.BeginForm("Dashboard", "Notes", FormMethod.Get))
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="home-03-info">
                        <h3>Published Notes</h3>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-8 col-sm-8 col-8">
                            <div class="form-group dash-search front-serach-box" id="dashboard-btn">
                                <span class="fa fa-search form-control-feedback"></span>
                                @Html.TextBox("SearchPublished", null, new { @class = "form-control", @placeholder = "Search", @style = "margin-top:20px;" })
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-4 col-4">
                            <div id="dashboard-btn">
                                <input class="btn btn-admin btn-home-03" type="submit" value="search" name="SearchPublished" style="margin-top:20px;">
