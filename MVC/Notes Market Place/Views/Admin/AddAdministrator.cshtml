@model Notes_Market_Place.Models.AddAdminstrator

@{
    ViewBag.Title = "AddAdministrator";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("AddAdministrator", "Admin", FormMethod.Post))
{
    <section class="Add-notes">
        <div class="content-box-md">
            <div class="container">
                <div class="row first-component">
                    <div class="col-md-12">
                        <div class="heading-01">
                            <h2>Add Administrator</h2>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div>
                            <div class="form-group input-flid">
                                <label for="text-1" class="titles">First Name *</label>
                                @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", @placeholder = "Enter your first name" })
                                @Html.ValidationMessageFor(model => model.FirstName)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group input-flid">
                            <label for="description" class="titles">Last Name *</label>
                            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @placeholder = "Enter your last name" })
                            @Html.ValidationMessageFor(model => model.LastName)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group input-flid">
                            <label for="description" class="titles">Email *</label>
                            @Html.TextBoxFor(model => model.EmailID , new { @class = "form-control", @placeholder = "Enter your email address" })
                            @Html.ValidationMessageFor(model =>model.EmailID)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-4 col-sm-4 col-4 phone">
                                <div class="form-group input-flid">
                                    <label class="titles">Phone Number</label>
                                    @Html.DropDownListFor(model => model.Phone_number_Country_Code, ViewBag.countrycode as SelectList, "Select Code", new { @class = "form-control form-control-md dropdown" })
                                </div>
                            </div>
                            <div class="col-md-8 col-sm-8 col-8">
                                <div class="form-group input-flid">
                                    <label class="titles">&nbsp;</label>
                                    @Html.TextBoxFor(model => model.phonenumber, new { @class = "form-control", @placeholder = "Enter your phone number", @type="number"})
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div id="home-add-notes">
                            <input class="btn btn-general btn-home-03" value="submit" type="submit">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

}
